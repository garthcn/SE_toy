<div class="well">
  <h3>
    <%= @user.name %>
  </h3>
  <h5>
    <%= @user.program %>
  </h5>
  <%= render "add_course" %>
</div>
<h3>
  Courses taking
</h3>
<div id='course-list'>
  <%= render "courses/list" %>
</div>
<div>
  <%= link_to('Edit User', edit_user_path(@user), :class => 'btn') %>
  <%= link_to('Delete User', user_path(@user), 
              :remote => true,
              :method => 'delete', 
              :class => 'btn btn-danger',
              :confirm => 'Really?') %>
</div>
