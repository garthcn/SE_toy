<div class="well">
  <h3>
    <%= @course.name %>
  </h3>
  <h5>
    <%= @course.note %>
  </h5>
</div>
<h3>
  Students in this class
</h3>
<div>
  <%= render "users/list" %>
</div>
<div>
  <%= link_to('Edit Course', edit_course_path(@course), :class => 'btn') %>
  <%= link_to('Delete Course', course_path(@course), 
              :remote => true,
              :method => 'delete', 
              :class => 'btn btn-danger',
              :confirm => 'Really?') %>
</div>


