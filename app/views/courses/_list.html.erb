<script>
  $('body').on('click', 'table.course tbody tr', function(evt) {
    var url = '/courses/' + $(evt.currentTarget).attr('data-course-id')
    window.location = url;
  });
</script>
<table class="table table-hover course">
  <thead>
    <tr>
      <th>#</th>       
      <th>Name</th>       
      <th>Note</th>       
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |c| %>
      <tr data-course-id="<%= c.id %>">
        <th><%= c.id %></th>       
        <th><%= c.name %></th>       
        <th><%= c.note %></th>       
      </tr>
    <% end %>
  </tbody>
</table>

