<%= form_for @course, :remote => true, :url => { :action => "create" }, :html => {:class => "form-inline"} do |f| %>
  <%= f.text_field :name, :id => 'course-name', :placeholder => 'Course name' %>
  <%= f.text_field :note, :id => 'course-note', :placeholder => 'Any note?' %>
  <%= f.submit 'Add Course', :class => 'btn' %>
<% end %>

